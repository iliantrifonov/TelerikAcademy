extends ../shared/layout

block main-content
    form.form-horizontal(method="post")
        label(for="username") Username
        input(id="username" class="form-control" type="text" name="username" placeholder="Username" required="required")
        br
        label(for="password") Password
        input(id="password" class="form-control" type="password" name="password" placeholder="Password" required="required")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password" required="required")
        br
        label(for="firstname") First Name
        input(id="firstname" class="form-control" type="text" name="firstName" placeholder="First name" required="required")
        br
        label(for="lastname") Last Name
        input(id="lastname" class="form-control" type="text" name="lastName" placeholder="Last name" required="required")
        br
        label(for="phone") Phone
        input(id="phone" class="form-control" type="text" name="phoneNumber" placeholder="Phone")
        br
        label(for="email") Email
        input(id="email" class="form-control" type="email" name="email" placeholder="Email" required="required")
        br
        label(for="img") Profile image link
        input(id="img" class="form-control" type="url" name="profileImage" placeholder="Link to your profile image")
        br
        label(for="facebook") Facebook
        input(id="facebook" class="form-control" type="url" name="facebook" placeholder="Facebook")
        br
        label(for="twitter") Twitter
        input(id="twitter" class="form-control" type="url" name="twitter" placeholder="Twitter")
        br
        label(for="linkedIn") LinkedIn
        input(id="linkedIn" class="form-control" type="url" name="linkedIn" placeholder="LinkedIn")
        br
        label(for="google") Google+
        input(id="google" class="form-control" type="url" name="google" placeholder="Google+")
        br
        label(for="initiative") Choose initiative ( You can add more initiatives in your profile later )
        select(id="initiative" class="form-control" name="init" required="required")
            option(value="Software Academy") Software Academy
            option(value="Algo Academy") Algo Academy
            option(value="School Academy") School Academy
            option(value="School Academy") Kids Academy
        label(for="season") Choose season for the initiative
        select(id="season" class="form-control" name="season" required="required")
            option(value="Started 2010") Started 2010
            option(value="Started 2011") Started 2011
            option(value="Started 2012") Started 2012
            option(value="Started 2013") Started 2013
        input(type="submit" class="btn btn-primary" value="Register")
        a.btn.btn-default(href="/") Cancel